{
    "name": "symfony-bundles/kafka-bundle",
    "type": "symfony-bundle",
    "description": "Symfony Kafka Bundle",
    "keywords": ["symfony", "bundle", "kafka", "rdkafka", "php"],
    "homepage": "https://github.com/symfony-bundles/kafka-bundle",
    "license": "MIT",
    "authors": [
        {
            "name": "Dmitry Khaperets",
            "email": "khaperets@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "SymfonyBundles\\KafkaBundle\\": "src"
        },
        "exclude-from-classmap": [
            "/Tests/"
        ]
    },
    "require": {
        "php": "^7.3",
        "ext-rdkafka": "*",
        "symfony/framework-bundle": "^4.0",
        "symfony/yaml": "^4.0"
    },
    "require-dev": {
        "kwn/php-rdkafka-stubs": "^1.3",
        "phpstan/phpstan": "^0.11",
        "phpunit/php-code-coverage": "^7.0",
        "phpunit/phpunit": "^8.2",
        "psr/log": "^1.1"
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true
    },
    "scripts": {
        "code-analyse": {
            "phpstan": "vendor/bin/phpstan analyse --configuration=phpstan.neon --level=7 src"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "0.x-dev"
        }
    }
}
